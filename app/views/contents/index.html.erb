<p id="notice"><%= notice %></p>

<h1>Contents</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.language %></td>
        <td><%= content.body %></td>
        <td><%= link_to 'Show', post_content_path(@post,content) %></td>
        <td><%= link_to 'Edit', edit_post_content_path(@post,content) %></td>
        <td><%= link_to 'Destroy', post_content_path(@post,content), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Content', new_post_content_path %>
